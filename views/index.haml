        .l-box-lrg.is-center.pure-u-1.pure-u-md-1-2.pure-u-lg-2-5
          %img.pure-img-responsive{:alt => "File Icons", :src => "img/HTML5_Logo_512.png", :width => "150px"}
        .pure-u-1.pure-u-md-1-2.pure-u-lg-3-5
